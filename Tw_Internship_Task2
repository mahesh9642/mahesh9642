package com.TopperWorld.AtmInterface;

import java.util.*;

public class ATM_Interface {

public static void main(String[] args) {
Scanner scanner=new Scanner(System.in);

int accountNumber=123456;
int pin=1234;
int balance =0;

System.out.println("Balance" +balance);

System.out.println("Enter your account number:");
int enteredAccountNumber=scanner.nextInt();

System.out.println("Enter you pin:");
int enteredPin=scanner.nextInt();


while(true){
System.out.println("Welcome to the ATM");

if(enteredAccountNumber==accountNumber && enteredPin){
  boolean isLoggedIn=true;
}else{
System.out.println("Invalid account number or PIN.Please try again.");
}
System.out.println("ATM MENU");
System.out.println("Choose 1 for Withdraw");

System.out.println("Choose 2 for Deposit");

System.out.println("Choose 3 for Check Balance");

System.out.println("Choose 4 for Exit");

System.out.print("Choose the Operation:");

int choice=scanner.nextInt();

System.out.println(choice);

switch (choice){
case 1:

 System.out.println("You have chosen to withdraw");
 System.out.println("Enter the amount to withdraw:");

int withdraw=scanner.nextInt();

if(withdraw >= balance){

System.out.println("you have not sufficient balance.\nYour balance is: "+ balance+"Rupee

}else{

balance-=withdraw;
System.out.println("Your withdrawal was successful");

System.out.println("Your Withdrawal was successful");

}

break;

case 2:

System.out.println("You have chosen to Deposit");

System.out.println("Enter the Amount to be Deposit: ");

int deposit=scanner.nextInt();

balance+=deposit;

System.out.println("Your Money has been successfully Deposited.Current Account is:"+balance);

break;

case 3:
System.out.println("You choosen to Check Balance");
System.out.println("Your current Account Balance is:" +balance+" Rupees.");

break;
case 4:
System.out.println("Exit");

return; // exit
default:

System.out.println(x: "Invalid choice...Try Again"); // for invalid input}}}}
}}}}
